
<%- include("header") -%>
    <!-- What day is it??? -->
    <div class="box" id="heading">
        <h1> <%= listTitle %></h1>

    </div>

    <!-- Items of What To Do -->
    <div class="box">

<!-- Using forEach() loop instead of for() loop -->
      <%  newListItems.forEach(function(item){ %>
        <!-- form for deleting input -->
        <form class="" action="/delete" method="post">
          <div class="item">
              <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                <p><%= item.name %> </p>
          </div>
            <!-- This input tag is hidden. It is so in order to delete from Custom list without creating another checkbox -->
              <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>

      <%  }); %>


        <%// Using for() loop %>
            <% //for (var i=0; i<newListItems.length; i++){ %>
                <!-- <div class="item">
                    <input type="checkbox">
                      <p><%= //newListItems[i].name %> </p> -->
                <!-- </div> -->
            <% //} %>


            <!-- form for adding input -->
            <form class="item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
    </div>



<%- include("footer") -%>


